<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag   current_user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <% @books.each do |book| %>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= book.body %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row">
        <p><% link_to "User info", edit_user_path(current_user.id) %>
        <i class="fas fa-user-cog"></i>
        </p>
      </div>
      <h2>New book</h2>
       <%= form_with model: @book do |f| %>
       <h4>Title</h4>
       <%= f.text_field :title %>
       <h4>Opinion</h4>
       <%= f.text_area :body %>
       <%= f.submit 'Creat Book' %>
       <% end %>
    </div>