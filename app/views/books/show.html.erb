<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td><%= image_tag @book.user.get_profile_image(100,100) %><br><%= book.user.name %></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <td><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
      </tr>
    </tbody>
  </table>
</div>
