<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, autofocus: true, id:title %>
      </div>
      <div clas="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body,autofocus: true, id:body %>
      </div>
      <div clas="form-group">
        <%= f.submit "Update Book" %>
      </div>
        <% end %>
        <%= link_to "Edit", edit_book_path(@book.id) %>
        |
        <%= link_to "Back", books_path(current_user) %>
      </div>
    </div>
  </div>
</main>
