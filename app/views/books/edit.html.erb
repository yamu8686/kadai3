<div class="container">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>
    <%= form_with model: @book do |f| %>
    <label for="book_title">Title</label>
    <%= f.text_field :title, autofocus: true, id:"book_title", placeholder:"book[title]" %>
    <label for="book_body">Opinion</label>
    <%= f.text_area :body,autofocus: true, id:book_body, placeholder:"book[body]" %>
    <%= f.submit "Update Book" %>
    <% end %>
    <%= link_to "Edit", edit_book_path(@book.id) %>
    |
    <%= link_to "Back", books_path(current_user) %>
  </div>
</div>
